<div class="mt-8 max-w-md mx-auto bg-white shadow-lg rounded-lg p-6">
    <% if flash[:alert] %>
            <div class="bg-red-100 text-red-800 p-4 rounded-md mb-6">
                <p><%= flash[:alert] %></p>
            </div>
        <% end %>

    <h2 class="text-2xl font-bold text-center text-gray-900">Edit Your Profile</h2>
    
    <%= form_with model: Current.user, url: update_user_path, class: "space-y-4" do |form| %>

        <% if form.object.errors.any? %>
            <div class="mb-4 p-4 bg-red-100 border border-red-400 rounded-md">
                <p class="text-sm text-red-700 font-semibold">Please fix the following errors:</p>
                <ul class="list-disc list-inside mt-1 text-sm text-red-600">
                    <% form.object.errors.full_messages.each do |message| %>
                        <li><%= message %></li>
                    <% end %>
                </ul>
            </div>
        <% end %>

        <div>
            <label for="name" class="block text-sm font-medium text-gray-700">Full Name</label>
            <%= form.text_field :name, class: "mt-1 block w-full border border-gray-300 rounded-md p-2 focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
        </div>

        <div>
            <label for="email" class="block text-sm font-medium text-gray-700">Email</label>
            <%= form.email_field :email, class: "mt-1 block w-full border border-gray-300 rounded-md p-2 focus:ring-2 focus:ring-blue-500 focus:border-blue-500", placeholder: "you@example.com" %>
        </div>


        <div>
            <label for="password_confirmation" class="block text-sm font-medium text-gray-700">Confirm Password to Save Changes</label>
            <%= form.password_field :current_password, class: "mt-1 block w-full border border-gray-300 rounded-md p-2 focus:ring-2 focus:ring-blue-500 focus:border-blue-500", placeholder: '••••••' %>
        </div>

        <div>
            <%= form.submit "Update Profile", class: "w-full bg-blue-600 text-white font-semibold py-2 rounded-md hover:bg-blue-700 transition duration-200 focus:ring-2 focus:ring-blue-400 focus:outline-none" %>
        </div>

    <% end %>
</div>
