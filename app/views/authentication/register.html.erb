<div class="min-h-screen bg-gray-100 flex flex-col py-12 px-4 sm:px-6 lg:px-8">
  <div class="mx-auto w-full max-w-md">
    <h2 class="mt-6 text-center text-xl sm:text-xl md:text-2xl font-extrabold text-gray-900">
      Create your account
    </h2>
  </div>

  <div class="mt-8 mx-auto w-full max-w-md">
    <div class="bg-white py-8 px-6 sm:px-10 shadow rounded-lg">
      <%= form_with model: @user, url: register_path do |form| %>

        <% if form.object.errors.any? %>
          <div class="mb-6 p-4 bg-red-50 border-l-4 border-red-400 rounded">
            <div class="flex">
              <div class="flex-1">
                <p class="text-sm text-red-700 font-medium mb-2">
                  Please fix the following errors:
                </p>
                <ul class="list-disc list-inside space-y-1">
                  <% form.object.errors.full_messages.each do |message| %>
                    <li class="text-sm text-red-600"><%= message %></li>
                  <% end %>
                </ul>
              </div>
            </div>
          </div>
        <% end %>

        <div class="mb-4">
          <label for="name" class="block text-base font-medium text-gray-700">
            Full Name
          </label>
          <div class="mt-1">
            <%= form.text_field :name, class: "block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm", placeholder: 'John Doe' %>
          </div>
        </div>

        <div class="mb-4">
          <label for="email" class="block text-base font-medium text-gray-700">
            Email address
          </label>
          <div class="mt-1">
            <%= form.text_field :email, class: "block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm", placeholder: 'user@email.com' %>
          </div>
        </div>

        <div class="mb-4">
          <label for="password" class="block text-base font-medium text-gray-700">
            Password
          </label>
          <div class="mt-1">
            <%= form.password_field :password, class: "block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm", placeholder: '*****' %>
          </div>
        </div>

        <div class="mb-6">
          <label for="password_confirmation" class="block text-base font-medium text-gray-700">
            Confirm Password
          </label>
          <div class="mt-1">
            <%= form.password_field :password_confirmation, class: "block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm", placeholder: '*****' %>
          </div>
        </div>

        <p class="mt-2 mb-4 text-center text-sm text-gray-600">
          Or
          <a href="/login" class="font-medium text-indigo-600 hover:text-indigo-500">
            sign in to your account
          </a>
        </p>

        <div>
          <%= form.submit "Sign Up", class: "w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
        </div>

      <% end %>
    </div>
  </div>
</div>
