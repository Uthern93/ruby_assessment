<div class="max-w-lg sm:max-w-2xl md:max-w-3xl mx-auto mt-10 px-4 sm:px-6">
  <h2 class="text-lg sm:text-2xl md:text-3xl font-bold mb-6 text-center">Create a New Blog</h2>

  <%= form_with model: @blog, local: true, url: new_blogs_path do |form| %>
    <% if @blog.errors.any? %>
      <div class="bg-red-100 p-4 rounded mb-4">
        <ul>
          <% @blog.errors.full_messages.each do |msg| %>
            <li class="text-red-600"><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="mb-4">
      <%= form.label :title, class: "block text-gray-700 font-semibold text-base sm:text-lg md:text-lg" %>
      <%= form.text_field :title, class: "mt-1 w-full p-2 border border-gray-300 rounded text-base sm:text-lg md:text-lg" %>
    </div>

    <div class="mb-4">
      <%= form.label :content, class: "block text-gray-700 font-semibold text-base sm:text-lg md:text-lg" %>
      <%= form.rich_text_area :content, class: "w-full p-2 border border-gray-300 rounded text-base sm:text-lg md:text-lg" %>
    </div>

    <div class="mb-4">
      <%= form.label :image, class: "block text-gray-700 font-semibold text-base sm:text-lg md:text-lg" %>
      <%= form.file_field :image_url, class: "mt-1 w-full border border-gray-300 rounded p-2 cursor-pointer bg-gray-100 hover:bg-gray-200 text-base sm:text-lg md:text-lg", id: "imageInput" %>
    </div>

    <div>
      <%= form.submit "Create Blog", class: "w-full bg-blue-600 text-white font-semibold py-2 px-4 rounded hover:bg-blue-700" %>
    </div>
  <% end %>
</div>
